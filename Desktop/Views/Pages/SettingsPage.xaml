<Page
    x:Class="Desktop.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Desktop.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="42">
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="个性化设置" />
        <TextBlock Margin="0,12,0,0" Text="设置主题" />
        <RadioButton
            x:Name="LightThemeRadioButton"
            Margin="0,12,0,0"
            Checked="OnLightThemeRadioButtonChecked"
            Content="白色主题"
            GroupName="themeSelect" />
        <RadioButton
            x:Name="DarkThemeRadioButton"
            Margin="0,8,0,0"
            Checked="OnDarkThemeRadioButtonChecked"
            Content="夜间主题"
            GroupName="themeSelect" />

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="DDTV5 - Desktop   开发中...." />

        <TextBlock x:Name="AppVersionTextBlock" Margin="0,12,0,0" />
    </StackPanel>
</Page>
